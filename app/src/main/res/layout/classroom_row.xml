<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvOrderClass"
        android:layout_width="@dimen/width_small_column"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:text="STT"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="@dimen/divider_height"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"/>

    <TextView
        android:id="@+id/tvIdClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/malop"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"/>

    <TextView
        android:layout_width="@dimen/divider_height"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"/>

    <TextView
        android:id="@+id/tvNameClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:layout_weight="1"
        android:text="@string/tenlop"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="@dimen/divider_height"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"/>

    <TextView
        android:id="@+id/tvTimeClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:layout_weight="1"
        android:text="@string/thoigian"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="@dimen/divider_height"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"/>

    <TextView
        android:id="@+id/tvRoomClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:layout_weight="1"
        android:text="@string/phonghoc"
        android:textColor="@color/teal_700"
        android:gravity="center_horizontal"/>

</LinearLayout>